---
const { title, description } = Astro.props;
import Footer from "src/components/footer.astro";
import Header from "../components/header.astro";
import "../styles/global.css";
import Legals from "src/components/modals/legals.astro";
---

<!doctype html>
<html lang="fr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!-- Open Graph pour rÃ©seaux sociaux -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:image" content="/og-image.jpg" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <!-- Matomo -->
    <script>
      var _paq = ((window as any)._paq = (window as any)._paq || []);

      /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
      _paq.push(["trackPageView"]);
      _paq.push(["enableLinkTracking"]);
      (function () {
        var u = "//stats.alx-solutions-numeriques.fr/";
        _paq.push(["setTrackerUrl", u + "matomo.php"]);
        _paq.push(["setSiteId", "2"]);
        var d = document,
          g = d.createElement("script"),
          s = d.getElementsByTagName("script")[0];
        g.async = true;
        g.src = u + "matomo.js";
        if (s.parentNode) {
          s.parentNode.insertBefore(g, s);
        }
      })();
    </script>
    <!-- End Matomo Code -->
  </head>
  <body
    class="font-main transition-all bg-background min-h-screen text-text flex flex-col"
  >
    <Header />
    <main class="flex-1 flex flex-col items-center justify-center">
      <slot />
    </main>
    <Footer />
    <Legals />
  </body>
</html>
