---
import { OWNER } from "shared/config";
---

<footer
  class="footer footer-horizontal footer-center bg-base-200 text-base-content rounded p-10"
>
  <nav class="grid grid-flow-col gap-4 text-secondary">
    <a class="link link-hover" href={`mailto:${OWNER.CONTACT}`}>Contact</a>
    <a onclick="legalsModal.showModal()" class="link link-hover"
      >Mentions légales</a
    >
  </nav>
  <aside>
    <p>
      {new Date().getFullYear()} - <a href={OWNER.WEBSITE} target="_blank"
        >{OWNER.NAME}</a
      > - Tous droits réservés
    </p>
  </aside>
</footer>
