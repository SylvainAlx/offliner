{
  "compilerOptions": {
     "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true, // nécessaire si tu veux build ou référencer
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}
